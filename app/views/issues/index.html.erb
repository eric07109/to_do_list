<div class="container">
	<div class="row">
		<table class="table table-striped table-condensed">
			<thead>
			    <tr>
			      <th>Title</th>
			      <th>Due Date</th>
			      <th><span class="glyphicon glyphicon-search" aria-hidden="true"></span></th>
			      <th><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></th>
			    </tr>
		  	</thead>
		  	<tbody>
				<% @issues.each do |issue| %>
					<tr>
						<td><%= issue.title %></td>
						<td><%= issue.due_date%></td>
						<td><%= link_to 'Show detail', issue_path(issue) %></td>
						<td><%= link_to 'Delete', issue_path(issue), method: :delete, data:{ confirm: "Are you sure?"}%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="row">
		<button type="button" class="btn btn-secondary btn-lg btn-block"><%= link_to 'New to-do', new_issue_path%></button>
	</div>
</div>